html
  font-family: "helvetica neue", helvetica, arial, sans-serif;
  font-weight: 300;
  h1
    font-size: 24px;
    font-weight: 400;
  a
    text-decoration: none;
    color: #333333;
  a:hover
    color: #d48532;

header
  width: 22%;
  height: 100%;
  position: fixed;
  right: 0;
  top: 0;
  border-left: 1px solid #eeeeee;
  #header-wrapper
    top: 33%;
    position: relative;
    #header-avatar
      text-align: center;
    #header-name
      text-align: center;
      font-size: 16px;
      font-weight: 500
    #header-nav
      text-align: center;
    #header-description
      text-align: center;
      font-size: 13px;
      color: #777777;
      margin-top: -10px;
      a, a:active
        color: #d48532;
      a:hover
        color: #dc9c3a;

#blog
  width: 58%;
  position: relative;
  left: 15%
  margin-top: 70px;

#blog-post
  width: 78%;
  position: relative;
  left: 15%
  margin-top: 70px;

#admin
  margin-top: 20px;
  position: relative;
  width: 50%;
  left: 25%;
  input#post-title:focus
    outline: none;
  input#post-title
    position: relative;
    left: 20%;
    width: 50%;
    font-size: 24px;
    border: none;
    text-align: left;
    resize: none;
    height: 30px;
  #admin-container
    left: 20%
    position: relative;
    ul li
      list-style: none;
      margin-top: 15px;
      font-weight: 300;
      margin-left: -40px;
      a
        color: #555555;
      a:hover
        color: #d48532;
    #drafts
      margin-top: 10px;
      width: 250px;
      line-height: 1.5em;
      float: left;
      text-align: left;
      h1
        font-size: 16px;
        font-weight: 600;
    #published
      margin-top: 10px;
      width: 250px;
      line-height: 1.5em;
      float: left;
      text-align: left;
      h1
        font-size: 16px;
        font-weight: 600;

#edit-post
  margin-top: 20px;
  position: relative;
  width: 50%;
  left: 31%;
  input:focus
    outline: none;
  textarea:focus
    outline: none;
  textarea#post-title
    position: relative;
    width: 540px;
    font-size: 24px;
    border: none;
    text-align: left;
    resize: none;
  textarea#post-body
    position: relative;
    width: 540px;
    min-height: 450px;
    border: none;
    font-size: 18px;
    resize: none;
  #sidebar
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100px;
    background-color: #eeeeee;